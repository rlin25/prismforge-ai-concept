# PrismForge AI Production Environment Configuration
# This file contains production-specific settings for deployment

# Kubernetes Configuration
NAMESPACE=prismforge-ai
KUBECONFIG_FILE=/path/to/production/kubeconfig
REPLICA_COUNT=5
MIN_REPLICAS=3
MAX_REPLICAS=20

# Container Registry
IMAGE_REGISTRY=your-registry.example.com
IMAGE_REPOSITORY=prismforge-ai/app
IMAGE_TAG=latest

# Application Configuration
PRODUCTION_URL=https://prismforge-ai.example.com
API_URL=https://api.prismforge-ai.example.com
ENVIRONMENT=production
LOG_LEVEL=info
DEBUG=false

# Database Configuration
DATABASE_HOST=prismforge-prod-db.internal
DATABASE_PORT=5432
DATABASE_NAME=prismforge_production
DATABASE_USER=prismforge_prod
DATABASE_SSL=require
DATABASE_POOL_SIZE=20
DATABASE_MAX_CONNECTIONS=100

# Cache Configuration
REDIS_HOST=prismforge-prod-redis.internal
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD_SECRET=redis-password
REDIS_MAX_CONNECTIONS=50

# External Services
ANTHROPIC_API_KEY_SECRET=anthropic-api-key
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY_SECRET=supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY_SECRET=supabase-service-role-key

# Authentication
NEXTAUTH_URL=https://prismforge-ai.example.com
NEXTAUTH_SECRET_SECRET=nextauth-secret
JWT_SECRET_SECRET=jwt-secret
SESSION_TIMEOUT=86400

# Security Configuration
CORS_ORIGIN=https://prismforge-ai.example.com,https://api.prismforge-ai.example.com
RATE_LIMIT_WINDOW=900
RATE_LIMIT_MAX=1000
BCRYPT_ROUNDS=12
ENCRYPTION_KEY_SECRET=encryption-key

# Storage Configuration
AWS_REGION=us-east-1
AWS_S3_BUCKET=prismforge-ai-production-storage
AWS_S3_REGION=us-east-1
STORAGE_TYPE=s3
MAX_FILE_SIZE=104857600

# CDN Configuration
CDN_URL=https://cdn.prismforge-ai.example.com
STATIC_URL=https://static.prismforge-ai.example.com

# Monitoring and Logging
SENTRY_DSN_SECRET=sentry-dsn
NEW_RELIC_LICENSE_KEY_SECRET=newrelic-license
LOG_FORMAT=json
METRICS_ENABLED=true
TRACING_ENABLED=true
HEALTH_CHECK_PATH=/api/health

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER_SECRET=smtp-user
SMTP_PASS_SECRET=smtp-password
EMAIL_FROM=noreply@prismforge-ai.example.com

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=prismforge-ai-backups
BACKUP_ENCRYPTION_KEY_SECRET=backup-encryption-key

# Feature Flags
FEATURE_ADVANCED_AI=true
FEATURE_COLLABORATION=true
FEATURE_API_V2=true
FEATURE_ANALYTICS=true
FEATURE_ENTERPRISE_SSO=true

# Resource Limits
CPU_REQUEST=500m
CPU_LIMIT=2000m
MEMORY_REQUEST=1Gi
MEMORY_LIMIT=4Gi
DISK_REQUEST=10Gi
DISK_LIMIT=50Gi

# Autoscaling Configuration
HPA_ENABLED=true
HPA_MIN_REPLICAS=3
HPA_MAX_REPLICAS=20
HPA_CPU_TARGET=70
HPA_MEMORY_TARGET=80
HPA_REQUESTS_TARGET=1000

# Network Configuration
SERVICE_TYPE=ClusterIP
INGRESS_CLASS=nginx
INGRESS_ANNOTATIONS=nginx.ingress.kubernetes.io/rate-limit-connections=20
TLS_SECRET=prismforge-ai-tls
CERT_MANAGER_ISSUER=letsencrypt-prod

# Blue-Green Deployment Configuration
BLUE_GREEN_ENABLED=true
SMOKE_TEST_TIMEOUT=300
TRAFFIC_SWITCH_DELAY=30
CLEANUP_OLD_DEPLOYMENT=true

# Canary Deployment Configuration
CANARY_ENABLED=true
CANARY_PERCENTAGE=10
CANARY_MONITOR_DURATION=600
CANARY_ERROR_THRESHOLD=0.05
CANARY_LATENCY_THRESHOLD=2.0

# Notification Configuration
SLACK_WEBHOOK_SECRET=slack-webhook
TEAMS_WEBHOOK_SECRET=teams-webhook
EMAIL_NOTIFICATIONS=admin@prismforge-ai.example.com
PAGERDUTY_KEY_SECRET=pagerduty-key

# DNS and CDN Configuration
CLOUDFLARE_API_TOKEN_SECRET=cloudflare-api-token
CLOUDFLARE_ZONE_ID=your-zone-id
CLOUDFLARE_RECORD_ID=your-record-id
CDN_PURGE_URL=https://api.cloudflare.com/client/v4/zones/your-zone-id/purge_cache
CDN_API_TOKEN_SECRET=cdn-api-token

# Compliance and Security
GDPR_ENABLED=true
AUDIT_LOGGING=true
DATA_RETENTION_DAYS=2555
ENCRYPTION_AT_REST=true
ENCRYPTION_IN_TRANSIT=true
PII_ANONYMIZATION=true

# Performance Configuration
CACHE_TTL=3600
SESSION_CACHE_TTL=1800
API_CACHE_TTL=300
STATIC_CACHE_TTL=31536000
GZIP_COMPRESSION=true
BROTLI_COMPRESSION=true

# Development and Debug (disabled in production)
HOT_RELOAD=false
SOURCE_MAPS=false
PROFILING=false
VERBOSE_LOGGING=false

# Maintenance
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="PrismForge AI is temporarily unavailable for maintenance."
MAINTENANCE_RETRY_AFTER=3600